rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // User Portfolios Collection
    match /portfolios/{userId} {
      // 1. Write Access: STRICT - Users can only write to their own document
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // 2. Read Access: PUBLIC
      // This is required because your Next.js server fetches these profiles 
      // using the client SDK to render the public pages.
      allow read: if true;
    }
  }
}
